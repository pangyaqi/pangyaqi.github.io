    <!-- 祝福弹窗 -->
    <div id="wishModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-2xl p-8 max-w-md w-full mx-4 transform transition-all scale-95 opacity-0" id="modalContent">
            <h3 class="text-2xl font-cute text-primary text-center mb-4">给雅棋的祝福</h3>
            <textarea id="wishText" class="w-full p-4 border border-secondary/30 rounded-xl h-32 mb-6 font-cute" placeholder="写下你的祝福..."></textarea>
            <div class="flex justify-end gap-3">
                <button id="closeModal" class="py-2 px-6 border border-primary text-primary rounded-full hover:bg-primary/10 transition">取消</button>
                <button id="sendWish" class="py-2 px-6 bg-primary text-white rounded-full hover:bg-primary/80 transition">发送祝福</button>
            </div>
        </div>
    </div>

    <!-- 显示祝福的区域 -->
    <div id="wishDisplay" class="fixed bottom-4 left-4 bg-white/90 backdrop-blur-sm rounded-xl p-4 shadow-lg max-w-xs hidden z-40">
        <h4 class="font-cute text-primary mb-2">收到的祝福</h4>
        <div id="wishList" class="max-h-64 overflow-y-auto">
            <!-- 祝福会在这里显示 -->
        </div>
