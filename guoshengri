    <script>
        // 创建星星背景
        function createStars() {
            const starsContainer = document.getElementById('stars');
            const starCount = 100;
            
            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                
                // 随机大小
                const size = Math.random() * 3 + 1;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                
                // 随机位置
                star.style.left = `${Math.random() * 100}%`;
                star.style.top = `${Math.random() * 100}%`;
                
                // 随机动画延迟
                star.style.animationDelay = `${Math.random() * 2}s`;
                
                starsContainer.appendChild(star);
            }
        }
        
        // 倒计时功能
        function updateCountdown() {
            // 目标日期：今年的9月19日
            const today = new Date();
            let year = today.getFullYear();
            
            // 如果已经过了今年的生日，就计算到明年的
            if (today.getMonth() > 8 || (today.getMonth() === 8 && today.getDate() > 19)) {
                year++;
            }
            
            const birthday = new Date(year, 8, 19); // 月份从0开始，9月是8
            const diff = birthday - today;
            
            // 计算天、时、分、秒
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            // 更新DOM
            document.getElementById('days').textContent = days.toString().padStart(2, '0');
            document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
            document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
            document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            
            // 如果是生日当天
            if (days === 0 && hours === 0 && minutes === 0 && seconds === 0) {
                document.querySelector('#countdown').innerHTML = `
                    <div class="text-center">
                        <div class="text-4xl font-bold text-accent text-glow">今天！</div>
                        <div class="text-xl text-primary mt-2">就是雅棋的生日！</div>
                    </div>
                `;
            }
        }
        
        // 创建气球
        function createBalloons() {
            const balloonsContainer = document.getElementById('balloons');
            const colors = ['bg-red-400', 'bg-blue-400', 'bg-green-400', 'bg-yellow-400', 'bg-purple-400', 'bg-pink-400', 'bg-indigo-400'];
            const balloonCount = 10;
            
            for (let i = 0; i < balloonCount; i++) {
                const balloon = document.createElement('div');
                const color = colors[Math.floor(Math.random() * colors.length)];
                
                balloon.className = `absolute cursor-pointer transition-all duration-300 ${color}`;
                balloon.style.width = '40px';
                balloon.style.height = '50px';
                balloon.style.borderRadius = '50% 50% 40% 40%';
                balloon.style.left = `${Math.random() * 100}%`;
                balloon.style.bottom = '0';
                
                // 添加绳子
                const string = document.createElement('div');
                string.className = 'bg-gray-300 absolute left-1/2 transform -translate-x-1/2';
                string.style.width = '2px';
                string.style.height = '30px';
                string.style.bottom = '-30px';
                
                balloon.appendChild(string);
                balloonsContainer.appendChild(balloon);
                
                // 气球点击事件 - 放飞气球
                balloon.addEventListener('click', () => {
                    balloon.style.bottom = '150%';
                    balloon.style.opacity = '0';
                    balloon.style.transform = `translateX(${Math.random() * 100 - 50}px)`;
                    
                    // 移除气球
                    setTimeout(() => {
                        balloon.remove();
                    }, 1000);
                    
                    // 创建新气球替换
                    setTimeout(() => {
                        createBalloons();
                    }, 1500);
                });
            }
        }
        
        // 蛋糕点击效果
        function setupCakeInteraction() {
            const cake = document.getElementById('cake');
            const candle = document.getElementById('candle');
            
            cake.addEventListener('click', () => {
                // 吹灭蜡烛效果
                candle.querySelector('div:last-child').classList.remove('shine');
                candle.querySelector('div:last-child').style.opacity = '0.3';
                
                // 显示烟花
                createConfetti(50);
                
                // 1秒后重新点燃
                setTimeout(() => {
                    candle.querySelector('div:last-child').classList.add('shine');
                    candle.querySelector('div:last-child').style.opacity = '1';
                }, 1000);
            });
        }
        
        // 创建庆祝彩屑
        function createConfetti(count) {
            const colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#ff00ff', '#00ffff', '#ff9900'];
            
            for (let i = 0; i < count; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                
                // 随机颜色和大小
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                const size = Math.random() * 8 + 4;
                confetti.style.width = `${size}px`;
                confetti.style.height = `${size}px`;
                
                // 随机位置（以蛋糕为中心）
                const cakeRect = document.getElementById('cake').getBoundingClientRect();
                const centerX = cakeRect.left + cakeRect.width / 2;
                const centerY = cakeRect.top + cakeRect.height / 2;
                
                confetti.style.left = `${centerX}px`;
                confetti.style.top = `${centerY}px`;
                
                document.body.appendChild(confetti);
                
                // 动画
                setTimeout(() => {
                    const angle = Math.random() * Math.PI * 2;
                    const distance = Math.random() * 100 + 50;
                    const destX = centerX + Math.cos(angle) * distance;
                    const destY = centerY - Math.sin(angle) * distance;
                    
                    confetti.style.transition = 'all 1s ease-out';
                    confetti.style.opacity = '1';
                    confetti.style.transform = `translate(${destX - centerX}px, ${destY - centerY}px) rotate(720deg)`;
                    
                    // 移除彩屑
                    setTimeout(() => {
                        confetti.remove();
                    }, 1000);
                }, 10);
            }
        }
        
        // 祝福弹窗功能
        function setupWishModal() {
            const wishBtn = document.getElementById('wishBtn');
            const wishModal = document.getElementById('wishModal');
            const modalContent = document.getElementById('modalContent');
            const closeModal = document.getElementById('closeModal');
            const sendWish = document.getElementById('sendWish');
            const wishText = document.getElementById('wishText');
            const wishDisplay = document.getElementById('wishDisplay');
            const wishList = document.getElementById('wishList');
            
            // 打开弹窗
            wishBtn.addEventListener('click', () => {
                wishModal.classList.remove('hidden');
                // 动画效果
                setTimeout(() => {
                    modalContent.classList.remove('scale-95', 'opacity-0');
                    modalContent.classList.add('scale-100', 'opacity-100');
                }, 10);
                wishText.focus();
            });
            
            // 关闭弹窗
            function hideModal() {
                modalContent.classList.remove('scale-100', 'opacity-100');
                modalContent.classList.add('scale-95', 'opacity-0');
                setTimeout(() => {
                    wishModal.classList.add('hidden');
                }, 300);
            }
            
            closeModal.addEventListener('click', hideModal);
            
            // 点击外部关闭
            wishModal.addEventListener('click', (e) => {
                if (e.target === wishModal) {
                    hideModal();
                }
            });
            
            // 发送祝福
            sendWish.addEventListener('click', () => {
                const wish = wishText.value.trim();
                if (wish) {
                    // 添加到祝福列表
                    const wishItem = document.createElement('div');
                    wishItem.className = 'bg-soft/50 p-2 rounded mb-2 text-sm';
                    wishItem.textContent = wish;
                    wishList.appendChild(wishItem);
                    
                    // 显示祝福区域
                    wishDisplay.classList.remove('hidden');
                    
                    // 清空输入
                    wishText.value = '';
                    
                    // 关闭弹窗
                    hideModal();
                    
                    // 创建庆祝效果
                    createConfetti(30);
                    
                    // 5秒后自动隐藏祝福区域
                    setTimeout(() => {
                        wishDisplay.classList.add('hidden');
                    }, 5000);
                }
            });
            
            // 点击祝福区域可以手动隐藏
            wishDisplay.addEventListener('click', () => {
                wishDisplay.classList.add('hidden');
            });
        }
        
        // 页面加载完成后初始化
        window.addEventListener('DOMContentLoaded', () => {
            createStars();
            updateCountdown();
            setInterval(updateCountdown, 1000);
            createBalloons();
            setupCakeInteraction();
            setupWishModal();
        });
    </script>
</body>
</html>
